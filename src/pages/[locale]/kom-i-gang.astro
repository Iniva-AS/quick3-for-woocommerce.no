---
import DocsLayout from '../../layouts/DocsLayout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import { useTranslations, type Locale } from '../../i18n/utils';

export async function getStaticPaths() {
	return [
		{ params: { locale: 'no' } },
		{ params: { locale: 'en' } },
	];
}

const { locale } = Astro.params as { locale: Locale };
const t = useTranslations(locale);

// Heroicons Check Circle Icon
const CheckCircleIcon = '<svg class="mt-1 size-5 flex-none text-indigo-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>';
---

<DocsLayout
	locale={locale}
	title={t.meta.getStarted.title}
	description={t.meta.getStarted.description}
	currentPath={Astro.url.pathname}
>
	<div class="mx-auto max-w-3xl text-base/7 text-gray-700">
		<Breadcrumb items={[
			{ label: t.nav.home, href: `/${locale}` },
			{ label: t.nav.getStarted }
		]} />
		<p class="text-base/7 font-semibold text-indigo-600">{t.getStarted.tagline}</p>
		<h1 class="mt-2 text-4xl font-semibold tracking-tight text-pretty text-gray-900 sm:text-5xl">
			{t.getStarted.title}
		</h1>
		<p class="mt-6 text-xl/8">
			{t.getStarted.intro}
		</p>

		<!-- Download Section -->
		<div class="mt-10 max-w-2xl">
			<div class="rounded-2xl bg-indigo-50 p-8 ring-1 ring-inset ring-indigo-600/10">
				<div class="flex items-start gap-x-4">
					<svg class="mt-1 size-6 flex-none text-indigo-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5M16.5 12L12 16.5m0 0L7.5 12m4.5 4.5V3" />
					</svg>
					<div class="flex-auto">
						<h3 class="text-lg font-semibold text-gray-900">{t.getStarted.downloadSection.title}</h3>
						<p class="mt-2 text-sm text-gray-600">{t.getStarted.downloadSection.description}</p>
						<div class="mt-6">
							<a
								href="https://checkout.freemius.com/plugin/20957/plan/34943/"
								target="_blank"
								rel="noopener noreferrer"
								class="inline-block rounded-md bg-indigo-600 px-4 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
							>
								{t.getStarted.downloadSection.buttonText}
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="mt-10 max-w-2xl">
			<h2 class="mt-16 text-3xl font-semibold tracking-tight text-pretty text-gray-900">
				{t.getStarted.step1.title}
			</h2>
			<p class="mt-6">
				{t.getStarted.step1.description}
			</p>
			<ul role="list" class="mt-8 max-w-xl space-y-8 text-gray-600">
				{t.getStarted.step1.steps.map((step) => (
					<li class="flex gap-x-3">
						<Fragment set:html={CheckCircleIcon} />
						<span set:html={step} />
					</li>
				))}
			</ul>
			<figure class="mt-10 border-l border-indigo-600 pl-9">
				<blockquote class="font-semibold text-gray-900">
					<p>
						"{t.getStarted.step1.warning}"
					</p>
				</blockquote>
			</figure>

			<h2 class="mt-16 text-3xl font-semibold tracking-tight text-pretty text-gray-900">
				{t.getStarted.step2.title}
			</h2>
			<p class="mt-6">
				{t.getStarted.step2.description}
			</p>
			<ul role="list" class="mt-8 max-w-xl space-y-8 text-gray-600">
				{t.getStarted.step2.steps.map((step) => (
					<li class="flex gap-x-3">
						<Fragment set:html={CheckCircleIcon} />
						<span set:html={step} />
					</li>
				))}
			</ul>

			<h2 class="mt-16 text-3xl font-semibold tracking-tight text-pretty text-gray-900">
				{t.getStarted.step3.title}
			</h2>
			<p class="mt-6">
				{t.getStarted.step3.description}
			</p>
			<ul role="list" class="mt-8 max-w-xl space-y-8 text-gray-600">
				{t.getStarted.step3.steps.map((step) => (
					<li class="flex gap-x-3">
						<Fragment set:html={CheckCircleIcon} />
						<span set:html={step} />
					</li>
				))}
			</ul>
			<figure class="mt-10 border-l border-indigo-600 pl-9">
				<blockquote class="font-semibold text-gray-900">
					<p>
						"{t.getStarted.step3.warning}"
					</p>
				</blockquote>
			</figure>

			<h2 class="mt-16 text-3xl font-semibold tracking-tight text-pretty text-gray-900">
				{t.getStarted.step4.title}
			</h2>
			<p class="mt-6">
				{t.getStarted.step4.description}
			</p>

			<h3 class="mt-10 text-xl font-semibold text-gray-900">{t.getStarted.step4.substep1.title}</h3>
			<p class="mt-4" set:html={t.getStarted.step4.substep1.description} />
			<pre class="mt-6 bg-gray-900 text-gray-100 p-4 rounded-lg overflow-x-auto text-sm"><code>{t.getStarted.step4.substep1.code}</code></pre>

			<h3 class="mt-10 text-xl font-semibold text-gray-900">{t.getStarted.step4.substep2.title}</h3>
			<ul role="list" class="mt-6 max-w-xl space-y-8 text-gray-600">
				{t.getStarted.step4.substep2.steps.map((step) => (
					<li class="flex gap-x-3">
						<Fragment set:html={CheckCircleIcon} />
						<span set:html={step} />
					</li>
				))}
			</ul>

			<h2 class="mt-16 text-3xl font-semibold tracking-tight text-pretty text-gray-900">
				{t.getStarted.step5.title}
			</h2>
			<p class="mt-6">
				{t.getStarted.step5.description}
			</p>
			<ul role="list" class="mt-8 max-w-xl space-y-8 text-gray-600">
				{t.getStarted.step5.steps.map((step) => (
					<li class="flex gap-x-3">
						<Fragment set:html={CheckCircleIcon} />
						<span set:html={step} />
					</li>
				))}
			</ul>
			<p class="mt-8">
				{t.getStarted.step5.note}
			</p>

			<h2 class="mt-16 text-3xl font-semibold tracking-tight text-pretty text-gray-900">
				{t.getStarted.step6.title}
			</h2>
			<p class="mt-6">
				{t.getStarted.step6.description}
			</p>
			<ul role="list" class="mt-8 max-w-xl space-y-8 text-gray-600">
				{t.getStarted.step6.steps.map((step) => (
					<li class="flex gap-x-3">
						<Fragment set:html={CheckCircleIcon} />
						<span set:html={step} />
					</li>
				))}
			</ul>

			<div class="mt-10 border-l border-indigo-600 pl-9">
				<h3 class="text-xl font-semibold text-gray-900">{t.getStarted.step6.syncTitle}</h3>
				<ul role="list" class="mt-6 space-y-3 text-gray-600">
					{t.getStarted.step6.syncItems.map((item) => (
						<li class="flex gap-x-3">
							<span class="text-indigo-600">âœ“</span>
							<span>{item}</span>
						</li>
					))}
				</ul>
			</div>

			<h2 class="mt-16 text-3xl font-semibold tracking-tight text-pretty text-gray-900">
				{t.getStarted.step7.title}
			</h2>
			<p class="mt-6">
				{t.getStarted.step7.description}
			</p>
			<ul role="list" class="mt-8 max-w-xl space-y-8 text-gray-600">
				{t.getStarted.step7.steps.map((step) => (
					<li class="flex gap-x-3">
						<Fragment set:html={CheckCircleIcon} />
						<span set:html={step} />
					</li>
				))}
			</ul>

			<figure class="mt-16 border-l border-indigo-600 pl-9">
				<blockquote class="font-semibold text-indigo-900">
					<p>
						"{t.getStarted.step7.congratulations}"
					</p>
				</blockquote>
			</figure>

			<h2 class="mt-16 text-3xl font-semibold tracking-tight text-pretty text-gray-900">
				{t.getStarted.readyToGo.title}
			</h2>
			<p class="mt-6">
				{t.getStarted.readyToGo.paragraph1}
			</p>
			<p class="mt-8">
				{t.getStarted.readyToGo.paragraph2}
			</p>

			<div class="mt-16 border-t border-gray-200 pt-8">
				<h3 class="text-xl font-semibold text-gray-900">{t.getStarted.nextSteps.title}</h3>
				<div class="mt-6 grid grid-cols-1 md:grid-cols-2 gap-6">
					<a href={`/${locale}/docs`} class="group block p-6 bg-gray-50 rounded-xl hover:bg-indigo-50 transition-colors border border-gray-200 hover:border-indigo-300">
						<div class="font-semibold text-indigo-600 mb-2 group-hover:text-indigo-700">{t.getStarted.nextSteps.docs.title}</div>
						<p class="text-sm text-gray-600">{t.getStarted.nextSteps.docs.description}</p>
					</a>
					<a href={`/${locale}/#contact`} class="group block p-6 bg-gray-50 rounded-xl hover:bg-indigo-50 transition-colors border border-gray-200 hover:border-indigo-300">
						<div class="font-semibold text-indigo-600 mb-2 group-hover:text-indigo-700">{t.getStarted.nextSteps.contact.title}</div>
						<p class="text-sm text-gray-600">{t.getStarted.nextSteps.contact.description}</p>
					</a>
				</div>
			</div>
		</div>
	</div>
</DocsLayout>
