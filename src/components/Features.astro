		icon: 'shopping-cart',
	},
	{
		name: t.features.multiWarehouse.name,
		description: t.features.multiWarehouse.description,
		icon: 'building-storefront',
	},
	{
		name: t.features.smartPricing.name,
		description: t.features.smartPricing.description,
		icon: 'currency-dollar',
	},
	{
		name: t.features.backgroundProcessing.name,
		description: t.features.backgroundProcessing.description,
		icon: 'cog',
	},
	{
		name: t.features.wordpressNative.name,
		description: t.features.wordpressNative.description,
		icon: 'shield',
